{
    "manifest_version": 2, 
    "name": "Brooke's Plugin",
    "description": "cool fun plugin by Brooke!",
    "version": "1.0",
    "permissions": ["activeTab"],
    "content_scripts": [
        {
            "matches": ["https://thebusybaker.ca/*"],
            "allFrames": true,
            "js": ["/js/jquery.js", "/js/content.js"],
            "css": ["/css/style.css"]
       }
     ],
    "action": {
        "default_icon": {
            "32":"/images/chrome_icon.jpg"
        },
        "default_popup": "popup.html"
    },
    "web_accessible_resources": [ 
        "images/*.jpg",
        "images/*.png" 
     ] 
}
